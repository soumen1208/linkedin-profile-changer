{
    "manifest_version": 3,
    "name": "LinkedIn Profile Picture Changer",
    "version": "1.0",
    "description": "Changes profile pictures in LinkedIn posts to a specified image.",
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/feed/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  